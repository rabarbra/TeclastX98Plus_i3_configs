[module/touchbrightdown]
;; Brightness down
type=custom/text
content=""
content-foreground=#fff
click-left=xbacklight -dec 10 >/dev/null 2>&1 &

[module/touchbrightup]
;; Brightness up
type=custom/text
content=""
content-foreground=#fff
click-left=xbacklight -inc 10 >/dev/null 2>&1 &

[module/backlightoff]
type=custom/text
content= 
content-foreground=#fff
click-left= xset dpms force off >/dev/null  2>&1 &

[module/touchkeyboard]
;; Open onscreen keyboard (onboard)
type=custom/text
content=""
content-foreground=#fff
click-left= dbus-send --type=method_call --print-reply --dest=org.onboard.Onboard /org/onboard/Onboard/Keyboard org.onboard.Onboard.Keyboard.ToggleVisible >/dev/null 2>&1 &

 
[module/touchredraw]
;; Restart i3 in order to redraw polybar to fit screen orientation
type=custom/text
content = ""
content-foreground=#fff
click-left = i3-msg 'restart' >/dev/null 2>&1 &

[module/rotate]
type=custom/text
content = ""
content-foreground=#fff
click-left = exec /home/polina/.rotate.sh switch >/dev/null 2>&1 &

[module/closeactwin]
type = custom/text
content = ""
content-foreground=#fff
click-left = exec xdotool key "Super_L+shift+Q" >/dev/null 2>&1 &

[module/moveleft]
type = custom/text
content = "  <  "
content-foreground=#fff
click-left = exec xdotool key "Super_L+shift+Left" &

[module/screenshot]
type = custom/text
content = ""
content-foreground=#fff
click-left = exec xdotool key "Print" >/dev/null 2>&1 &

[module/konsole]
type = custom/text
content = ""
content-foreground=#fff
click-left = exec xdotool key "Super_L+Return" >/dev/null 2>&1 &


[module/movedown]
type = custom/text
content = "  v  "
content-foreground=#fff
click-left = exec xdotool key "Super_L+shift+Down" &

[module/touchvolmute]
;; Mute
type=custom/text
content=" Vm "
content-foreground=#fff
click-left=pactl set-sink-mute @DEFAULT_SINK@ toggle >/dev/null 2>&1 &

[module/touchvoldown]
;; Volume down
type=custom/text
content=" Vd "
content-foreground=#fff
click-left=pactl set-sink-volume @DEFAULT_SINK@ -5% &

[module/touchvolup]
;; Volume up
type=custom/text
content="  Vu  "
content-foreground=#fff
click-left=pactl set-sink-volume @DEFAULT_SINK@ +5% &

[module/system-bluetooth-bluetoothctl]
type = custom/script
content = B
exec = bash ~/polybar-scripts/polybar-scripts/system-bluetooth-bluetoothctl/system-bluetooth-bluetoothctl.sh
tail = true
click-left = exec bash ~/polybar-scripts/polybar-scripts/system-bluetooth-bluetoothctl/system-bluetooth-bluetoothctl.sh --toggle &

[module/system-gpu-intel]
type = custom/script
format-underline = #4bffdc
exec = bash ~/polybar-scripts/polybar-scripts/system-gpu-intel/system-gpu-intel.sh
interval = 20

[module/i3touchmenu]
