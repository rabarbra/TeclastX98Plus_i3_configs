[module/touchvolmute]
;; Mute
type=custom/text
content=" Vm "
content-foreground=#fff
click-left=pactl set-sink-mute @DEFAULT_SINK@ toggle >/dev/null 2>&1 &

[module/touchvoldown]
;; Volume down
type=custom/text
content=" Vd "
content-foreground=#fff
click-left=pactl set-sink-volume @DEFAULT_SINK@ -5% &

[module/touchvolup]
;; Volume up
type=custom/text
content="  Vu  "
content-foreground=#fff
click-left=pactl set-sink-volume @DEFAULT_SINK@ +5% &


